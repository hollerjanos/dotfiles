general {
  colors = true
  interval = 1
}

order += "battery 0"
order += "disk /"
order += "memory"
order += "tztime local"

battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = "No battery"
  status_chr = "âš¡ CHR"
  status_bat = "ðŸ”‹ BAT"
  status_unk = "? UNK"
  status_full = "â˜» FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

disk "/" {
  format = "%avail"
}

memory {
        format = "%used|%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
