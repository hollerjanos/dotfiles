#!/usr/bin/env bash

#==============================
# Alias(es)
#==============================

# Use NeoVim instead of Vim (if exists)
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# Standard attribute(s) for command(s)
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"

# Short version for most used command(s)
alias c="clear"
alias v="${EDITOR}"
alias g="git"

# Colorize command(s)
alias ls="ls -hN --color=auto --group-directories-first"
alias grep="grep --color=auto"

# Other useful alias(es)
alias weather="clear -x && curl wttr.in"
alias open="xdg-open"
alias now="date \"+%Y%m%d%H%M%S\""
alias cfg='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
