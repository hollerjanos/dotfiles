#!/usr/bin/env bash

#===============================================================================
# Aliases
#===============================================================================

# Make sure to prompt the user about what will the command do.
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"

# Colorize commands.
alias ls="ls -hN --color=auto --group-directories-first"
alias grep="grep --color=auto"

# Other useful aliases.
alias weather="clear -x && curl wttr.in"
alias open="xdg-open"
alias now="date \"+%Y%m%d%H%M%S\""
alias cfg='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Put NeoVim's path inside $PATH.
export PATH="$PATH:/opt/nvim-linux-x86_64/bin"

# Compile whole C++ project.
alias compile='g++ -I./include $(find ./src -name "*.cpp") -o main.out'

# Open up NeoVim Config files.
alias nvimcfg='nvim -p $(find ~/.config/nvim/ -maxdepth 3 -type f -name "*.lua")'
